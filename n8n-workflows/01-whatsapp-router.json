    {
      "id": "n-extract-ai",
      "name": "Extrair resposta IA",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        2900,
        480
      ],
      "parameters": {
        "jsCode": "const phone = $('Extrair dados').item.json.phone;\nconst choices = $input.item.json.choices;\nconst aiResponse = choices?.[0]?.message?.content ?? 'Desculpe, erro na IA.';\nreturn [{ json: { phone, aiResponse } }];"
      }
    },
