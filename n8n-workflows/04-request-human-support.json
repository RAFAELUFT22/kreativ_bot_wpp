      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        2220,
        300
      ],
      "parameters": {
        "jsCode": "const input = $input.item.json;\nconst existingConvs = $('Checar Conversa Aberta').item.json.payload;\nlet id = null;\n\n// Check if we came from 'Criar Conversa' (newly created)\nif (input.id) {\n  id = input.id;\n} \n// Check if we came from 'Tem conversa aberta?' (existing)\nelse if (existingConvs && existingConvs.length > 0) {\n  const open = existingConvs.find(c => c.status === 'open');\n  if (open) id = open.id;\n}\n\nreturn [{ json: { id } }];"
      }
